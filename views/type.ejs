<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
    <link rel = "stylesheet" type = "text/css" href = "/stylesheets/styles.css" />
    <% rows.forEach((r) => { %>
      <style>
           #ID<%= r.tokimonid %> {
              color: green;
              float: left;
              margin: 1%;
              background-color: grey;
              max-width: 100%;
              max-height: 100%;
              width: <%= r.weight %>%;
              height: <%= r.height %>%; 
           }  
           #P<%= r.tokimonid %> {
            text-align: center;
            vertical-align: middle;
            line-height: 100px;

           }  
      </style>
     <% }) %>
  </head>
  <body>
    <body>
      <h1>Tokimon Types</h1>
        <div id = "tokimon_types">
          <% rows.forEach((r) => { %>
           <div id = "ID<%= r.tokimonid %>" >
             <p id = "P<%= r.tokimonid %>"> 
                Tokimon ID: <%= r.tokimonid %>
                <br> <%= r.name %>
             </p>
           </div>
          <% }) %>
        </div>
  </body>
  </body>
</html>