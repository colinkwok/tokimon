    <h1>Add a new Tokimon</h1>
    <form class="" action="/added" method="post" style= "text-align: center;">
        <input id ="newName" type="text" name="name" placeholder="Name" required>
        <input id ="newWeight" type="number" min="0" step="1" name="weight" placeholder="Weight" required>
        <input id ="newHeight" type="number" min="0" step="1" name="height" placeholder="Height" required>
        <input id ="newFly" type="number" min="0" step="1" name="fly" placeholder="Fly" required>
        <input id ="newFight" type="number" min="0" step="1" name="fight" placeholder="Fight" required>
        <input id ="newFire" type="number" min="0" step="1" name="fire" placeholder="Fire" required>
        <input id ="newWater" type="number" min="0" step="1" name="water" placeholder="Water" required>
        <input id ="newElectric" type="number" min="0" step="1" name="electric" placeholder="Electirc" required>
        <input id ="newFrozen" type="number" min="0" step="1" name="frozen" placeholder="Frozen" required>
        <input id ="newTrainer" type="text" name="trainer" placeholder="Trainer" required>
        <input type="submit" name="" value="Add Tokimon">
    </form> 
