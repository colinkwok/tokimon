    <table id = "tokimon_table">
            <tr>
              <th>Tokimon ID</th>
              <th>Name</th>
              <th>Weight</th>
              <th>Height</th>
              <th>Fly</th>
              <th>Fight</th>
              <th>Fire</th>
              <th>Water</th>
              <th>Electric</th>
              <th>Frozen</th>
              <th>Total</th>
              <th>Trainer</th>
            </tr>
            <% rows.forEach((r) => { %>
              <tr>
                <td> <%= r.tokimonid %> </td>
                <td> <%= r.name %> </td>
                <td> <%= r.weight %> </td>
                <td> <%= r.height %> </td>
                <td> <%= r.fly %> </td>
                <td> <%= r.fight %> </td>
                <td> <%= r.fire %> </td>
                <td> <%= r.water %> </td>
                <td> <%= r.electric %> </td>
                <td> <%= r.frozen %> </td>
                <td> <%= r.total %> </td>
                <td> <%= r.trainer %> </td>
              </tr>
            <% }) %>
        </table>

    <form class="" action="/deleted" method="post" style= "text-align: center;">
